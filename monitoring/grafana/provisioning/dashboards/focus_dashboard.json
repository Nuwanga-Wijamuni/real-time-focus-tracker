{
  "__inputs": [],
  "__requires": [],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": { "h": 8, "w": 18, "x": 0, "y": 0 },
      "id": 1,
      "title": "Focus State Over Time",
      "type": "statetimeline",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "focus_state{job=\"fastapi-app\"}",
          "legendFormat": "State",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [
            {
              "options": {
                "0": { "color": "#f2495c", "text": "No Face Detected" },
                "1": { "color": "#73bf69", "text": "Focused" },
                "2": { "color": "#f2cc0c", "text": "Looking Left" },
                "3": { "color": "#f2cc0c", "text": "Looking Right" },
                "4": { "color": "#e5ac0e", "text": "Looking Down" },
                "5": { "color": "#e5ac0e", "text": "Looking Up" }
              },
              "type": "value"
            }
          ]
        }
      },
      "options": { "showValue": "auto", "mergeValues": true }
    },
    {
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "id": 2,
      "title": "Focus State Distribution",
      "type": "piechart",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (state) (increase(focus_state_seconds_total{job=\"fastapi-app\"}[$__range]))",
          "legendFormat": "{{state}}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "pieType": "pie",
        "displayLabels": ["name", "percent"],
        "legend": { "displayMode": "list", "placement": "right" }
      }
    },
    {
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 8 },
      "id": 3,
      "title": "Head Pose Angles (Yaw, Pitch, Roll)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_yaw{job=\"fastapi-app\"}",
          "legendFormat": "Yaw",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_pitch{job=\"fastapi-app\"}",
          "legendFormat": "Pitch",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_roll{job=\"fastapi-app\"}",
          "legendFormat": "Roll",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "degree", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 10} } }
    },
    {
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
      "id": 4,
      "title": "API Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(http_requests_total{job=\"fastapi-app\"}[1m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 20} } }
    },
    {
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
      "id": 5,
      "title": "API Request Latency (p95)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi-app\"}[5m])) by (le))",
          "legendFormat": "p95 Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 10} } }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "AI Focus & Attention Tracker",
  "uid": "ai-focus-tracker-dashboard",
  "version": 13
}