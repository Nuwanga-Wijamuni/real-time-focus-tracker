{
  "__inputs": [],
  "__requires": [],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": { "h": 8, "w": 18, "x": 0, "y": 0 },
      "id": 1,
      "title": "Focus State Over Time",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "focus_state{job=\"fastapi-app\"}",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "lineInterpolation": "stepAfter",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 100,
            "gradientMode": "none",
            "spanNulls": true,
            "showPoints": "never",
            "axisPlacement": "auto",
            "stacking": { "mode": "normal", "group": "A" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"Focused\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#73bf69" } }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"Distracted - Looking Right\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2cc0c" } }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"Distracted - Looking Left\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2cc0c" } }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"Looking Down\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#e5ac0e" } }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"Distracted - Looking Up\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#e5ac0e" } }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{job=\"fastapi-app\", state=\"No Face Detected\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2495c" } }]
          }
        ]
      }
    },
    {
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "id": 2,
      "title": "Focus State Distribution",
      "type": "piechart",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (state) (increase(focus_state_seconds_total{job=\"fastapi-app\"}[$__range]))",
          "legendFormat": "{{state}}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "pieType": "pie",
        "displayLabels": ["name", "percent"],
        "legend": { "displayMode": "list", "placement": "right" }
      }
    },
    {
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 8 },
      "id": 3,
      "title": "Head Pose Angles (Yaw, Pitch, Roll)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_yaw{job=\"fastapi-app\"}",
          "legendFormat": "Yaw",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_pitch{job=\"fastapi-app\"}",
          "legendFormat": "Pitch",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_roll{job=\"fastapi-app\"}",
          "legendFormat": "Roll",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "degree", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 10} } }
    },
    {
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
      "id": 4,
      "title": "API Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(http_requests_total{job=\"fastapi-app\"}[1m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 20} } }
    },
    {
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
      "id": 5,
      "title": "API Request Latency (p95)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi-app\"}[5m])) by (le))",
          "legendFormat": "p95 Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 10} } }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "AI Focus & Attention Tracker",
  "uid": "ai-focus-tracker-dashboard",
  "version": 8
}
