{
  "__inputs": [],
  "__requires": [],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": { "h": 8, "w": 18, "x": 0, "y": 0 },
      "id": 1,
      "title": "Focus State Over Time",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "focus_state{job=\"fastapi-app\"}",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "lineInterpolation": "stepAfter",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 100,
            "gradientMode": "none",
            "spanNulls": true,
            "showPoints": "never",
            "axisPlacement": "auto",
            "stacking": { "mode": "normal", "group": "A" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"Focused\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#73bf69" } }, { "id": "displayName", "value": "Focused" }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"Distracted - Looking Right\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2cc0c" } }, { "id": "displayName", "value": "Looking Right" }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"Distracted - Looking Left\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2cc0c" } }, { "id": "displayName", "value": "Looking Left" }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"Looking Down\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#e5ac0e" } }, { "id": "displayName", "value": "Looking Down" }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"Distracted - Looking Up\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#e5ac0e" } }, { "id": "displayName", "value": "Looking Up" }]
          },
          {
            "matcher": { "id": "byName", "options": "focus_state{state=\"No Face Detected\"}" },
            "properties": [{ "id": "color", "value": { "fixedColor": "#f2495c" } }, { "id": "displayName", "value": "No Face" }]
          }
        ]
      }
    },
    {
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "id": 2,
      "title": "Focus State Distribution",
      "type": "piechart",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (state) (increase(focus_state_seconds_total{job=\"fastapi-app\"}[$__range]))",
          "legendFormat": "{{state}}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "pieType": "pie",
        "displayLabels": ["name", "percent"],
        "legend": { "displayMode": "list", "placement": "right" }
      }
    },
    {
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 8 },
      "id": 3,
      "title": "Head Pose Angles (Yaw, Pitch, Roll)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_yaw{job=\"fastapi-app\"}",
          "legendFormat": "Yaw",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_pitch{job=\"fastapi-app\"}",
          "legendFormat": "Pitch",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "head_pose_roll{job=\"fastapi-app\"}",
          "legendFormat": "Roll",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "degree", "color": {"mode":"palette-classic"}, "custom": {"lineWidth": 2, "fillOpacity": 10} } }
    },
    {
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 17 },
      "id": 6,
      "title": "Raw Focus State Data (for Debugging)",
      "type": "table",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "focus_state_seconds_total{job=\"fastapi-app\"}",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "AI Focus & Attention Tracker",
  "uid": "ai-focus-tracker-dashboard",
  "version": 16
}